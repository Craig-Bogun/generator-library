    {
      "name": "intelligent",
      "explanation": "Signature moves for intelligent monsters.",
      "entries": [
        "attempts to carve initials on opponent's skin"
      ]
    },
    {
      "name": "offense",
      "explanation": "Signature moves for attacks.",
      "entries": [
        "whimpers when attacking",
        "rears back before lunging",
        "ducks down and leaps to attack",
        "strikes quick hits towards the opponent's throat"
      ]
    },
    {
      "name": "offensive defense",
      "explanation": "Signature moves for attacking when defending.",
      "entries": [
        "parries and immediately counterattacks",
        "stays in defensive pose but occasionally launches quick attacks"
