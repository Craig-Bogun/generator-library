  "categories": [
    "utility"
  ],
  "tables": [
    {
      "name": "init",
      "explanation": "Initializing the required global variables, if any.",
      "entries": [
        {
          "v": "",
          "export": {
            "": ""
          }
        }
      ]
    },
    {
      "**************************************************": "OUTPUT VARIANTS"
    },
    {
      "name": "result",
      "explanation": "The output format.",
      "entries": [
        "{summary}",
        "{detail}",
        "{description}",
        "{stats}"
      ]
    },
    {
      "name": "summary",
      "explanation": "Brief output.",
      "entries": [
        "{concept}"
      ]
    },
    {
      "name": "detail",
      "explanation": "More detailed output variations.",
      "entries": [
        "{attribute} {concept}",
        "{concept}, {feature}",
        "{attribute} {concept}, {feature}"
      ]
    },
    {
      "name": "description",
      "explanation": "Long description as a paragraph of text.",
      "entries": [
        "The {concept} {synonym} {looks} {feature}.",
        "The {attribute} {concept} {synonym} {looks} {feature}."
      ]
    },
    {
      "name": "stats",
      "explanation": "Details as statistics.",
      "entries": [
        "{b|Name}: {random} \r\n{b|Attribute}: {attribute} \r\n{b|Feature}: {feature} "
      ]
    },
    {
