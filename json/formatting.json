    {
      "name": "CampaignLogger",
      "explanation": "Set global variables for Campaign Logger formatting.",
      "entries": [
        {
          "v": "",
          "export": {
            "format": "CampaignLogger",
            "starttitle": "{b|",
            "endtitle": "}\r\n\r\n",
            "startheading": "\r\n\r\n{b|",
            "endheading": "}",
            "startbold": "{b|",
            "endbold": "}",
            "startitalic": "{i|",
            "enditalic": "}",
            "startlink": "{\"|",
            "endlink": "\"|}",
            "startstrikethrough": "{s|",
            "endstrikethrough": "}",
            "startsubscript": "{\\|",
            "endsubscript": "}",
            "startsuperscript": "{/|",
